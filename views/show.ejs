<%- include('./partials/header.ejs'); -%>

<div class="container">
    <div class="fond"> <span class="s1">blog </span><span class="s2">card</span></div>

    <div class="card">
        <div class="thumbnail"><img class="left" src="<%= blog.image %>" />
        </div>
        <div class="content"> 
            <h1><%= blog.title %></h1>
            <div class="separator"></div>
            <p><%- blog.body.substring(0, 100)%>...</p>
        </div>
        <h6><%= blog.created.toDateString() %></h6>
        <ul>
            <li><i class="fa fa-eye fa-2x"></i></li>
            <li><i class="fa fa-heart-o fa-2x"></i></li>
            <li><i class="fa fa-share-alt fa-2x"></i></li>
        </ul>
        <a href="/blogs/<%= blog._id %>" class="fab fab-edit"><i class="fa fa-edit fa-2x"> </i></a>
        <a href="/blogs/<%= blog._id %>" class="fab fab-delete"><i class="fa fa-trash fa-2x"> </i></a>
    
    </div>
</div>

<%- include('./partials/footer.ejs'); -%>
